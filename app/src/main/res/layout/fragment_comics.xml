<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="afterDescendants">

    <com.android.projectorlauncher.ui.design.PosterCardView
        android:id="@+id/recommend"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="@drawable/video_card_selector_comics"
        android:nextFocusLeft="@id/category"
        android:nextFocusRight="@id/search"
        android:nextFocusDown="@id/recycler_view"
        app:cardBackgroundColor="@color/background_color"
        app:cardCornerRadius="3dp"
        app:cardElevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.55"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.55" />

    <androidx.cardview.widget.CardView
        android:id="@+id/search_card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        android:descendantFocusability="afterDescendants"
        android:translationZ="0dp"
        app:cardCornerRadius="3dp"
        app:layout_constraintBottom_toBottomOf="@id/recommend"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.26"
        app:layout_constraintHorizontal_bias="0.73"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintWidth_percent="0.20">

        <ImageView
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@drawable/search"
            android:clickable="true"
            android:focusable="true"
            android:nextFocusLeft="@id/recommend"
            android:nextFocusRight="@id/category"
            android:nextFocusDown="@id/recommend_1"
            android:background="@drawable/video_card_search_comics_selector"
            tools:ignore="ContentDescription" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/category_card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        android:translationZ="0dp"
        app:cardCornerRadius="3dp"
        app:layout_constraintBottom_toBottomOf="@id/recommend"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.26"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintWidth_percent="0.20">

        <ImageView
            android:id="@+id/category"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/more_category"
            android:clickable="true"
            android:focusable="true"
            android:nextFocusLeft="@id/search"
            android:nextFocusRight="@id/recommend"
            android:nextFocusDown="@id/recommend_2"
            android:background="@drawable/video_card_search_comics_selector"
            tools:ignore="ContentDescription" />
    </androidx.cardview.widget.CardView>

    <com.android.projectorlauncher.ui.design.PosterCardView
        android:id="@+id/recommend_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="true"
        android:focusable="true"
        android:nextFocusLeft="@id/recommend"
        android:nextFocusRight="@id/recommend_2"
        android:nextFocusUp="@id/search"
        android:nextFocusDown="@id/recycler_view"
        app:cardBackgroundColor="@color/background_color"
        app:cardCornerRadius="3dp"
        android:foreground="@drawable/video_card_selector_comics"
        app:layout_constraintBottom_toBottomOf="@id/recommend"
        app:layout_constraintEnd_toEndOf="@id/search_card"
        app:layout_constraintHeight_percent="0.26"
        app:layout_constraintStart_toStartOf="@id/search_card"
        app:layout_constraintTop_toBottomOf="@id/search_card"
        app:layout_constraintVertical_bias="1" />

    <com.android.projectorlauncher.ui.design.PosterCardView
        android:id="@+id/recommend_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="true"
        android:focusable="true"
        android:nextFocusLeft="@id/recommend_1"
        android:nextFocusRight="@id/recommend"
        android:nextFocusUp="@id/category"
        android:nextFocusDown="@id/recycler_view"
        app:cardBackgroundColor="@color/background_color"
        app:cardCornerRadius="3dp"
        android:foreground="@drawable/video_card_selector_comics"
        app:layout_constraintBottom_toBottomOf="@id/recommend"
        app:layout_constraintEnd_toEndOf="@id/category_card"
        app:layout_constraintHeight_percent="0.26"
        app:layout_constraintStart_toStartOf="@id/category_card"
        app:layout_constraintTop_toBottomOf="@id/category_card"
        app:layout_constraintVertical_bias="1" />

    <androidx.leanback.widget.HorizontalGridView
        android:id="@+id/recycler_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        android:descendantFocusability="afterDescendants"
        android:nextFocusLeft="@id/recommend_2"
        android:nextFocusRight="@id/recommend"
        android:nextFocusUp="@id/recommend"
        android:nextFocusDown="@id/recommend"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recommend" />


</androidx.constraintlayout.widget.ConstraintLayout>